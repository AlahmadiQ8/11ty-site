{% import "macros.njk" as macros with context %}

<main class="px-2 px-sm-3 px-md-4 px-lg-7 py-5 py-md-7 w-100">
  <h1>Blog</h1>
  <div class="posts">
    {%- for post in collections.post -%}
    {{ macros.entry(post.data.title, post.date, post.url, post.template.inputContent, post.data.tags) }}
    {%- endfor -%}
  </div>

